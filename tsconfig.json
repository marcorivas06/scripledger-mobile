{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "allowJs": true, // Allow JavaScript files to be compiled.
    "baseUrl": ".",
    "module": "es2020", // or es2022, esnext, commonjs, etc.
    "target": "es2020", // or es2022, esnext, etc.
    "paths": {
      "@*": ["./src/*"],
      "@components/*": ["./src/components/*"],
      "@types/*": ["./src/types/*"],
      "@pages/*": ["./src/pages/*"],
      "@styles/*": ["./src/styles/*"],
      "@constants/*": ["./src/constants/*"],
      "@mocks/*": ["./mocks/*"],
      "@assets/*": ["./assets/*"],
      "@helper/*": ["./src/helper/*"],
      "@db/*": ["./src/mongodb/*"],
      "crypto": [
        "node_modules/crypto-browserify"
      ],

      // TODO: Remove
      // Backward compatibility, should not be used anymore.
      "@src/*": ["./src/*"],
    },
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ]
}
